<div id="backdrop", class="container">
<h2>Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="input-field">
    <%= f.label :email, class: "indigo-text darken-4" %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="input-field">
    <%= f.label :password, class: "indigo-text darken-4" %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "indigo-text darken-4"%>
    </div>
  <% end -%>

  <div class="actions">
    <button class="btn indigo darken-4 waves-effect waves-light white-text" type="submit" name="action">Log In
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
