.container
  %h1.center-align
  .row
    = form_for @badge do |f|
      .input-field.col.s12
        = f.label :title, class: "indigo-text"
        = f.text_field :title
      .input-field.col.s12
        = f.label :description, class: "indigo-text"
        = f.text_area :description, class: 'materialize-textarea'
      .input-field.col.s12
        = f.label :badge_multiplier, class: "indigo-text"
        = f.text_field :badge_multiplier
      .field.col.s12
        = f.label :avatar 
        = f.file_field :avatar

      = f.hidden_field :user_id, value: current_user.id

      = f.submit 'Submit', class: 'btn red darken-4 white-text'
      = link_to 'Cancel', badges_path, class: 'btn red darken-4 white-text'
