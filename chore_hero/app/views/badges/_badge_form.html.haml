.container.headline
  %h1.center-align
  .row
    = form_for @badge do |f|
      .input-field.col.s12
        = f.label :title, class: "indigo-text"
        = f.text_field :title
      .input-field.col.s12
        = f.label :description, class: "indigo-text"
        = f.text_area :description, class: 'materialize-textarea'
      .field.col.s12
        = f.label :avatar 
        = f.file_field :avatar
        %br
        %br

      = f.hidden_field :user_id, value: current_user.id
      = f.submit 'Submit', class: 'btn red darken-4 white-text'
      = link_to 'Cancel', user_path(current_user), class: 'btn red darken-4 white-text'
