.container
  %h1.center-align
  .row
    = form_for @chore do |f|
      .input-field.col.s12
        = f.label :title
        = f.text_field :title
      .input-field.col.s12
        = f.label :description
        = f.text_area :description, class: 'materialize-textarea'
      .input-field.col.s12
        = f.label :xp_value
        = f.text_field :xp_value
        
      = f.hidden_field :user_id, value: current_user.id

      = f.submit 'Submit', class: 'btn'
