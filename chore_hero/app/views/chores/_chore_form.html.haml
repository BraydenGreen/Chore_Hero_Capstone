- if current_user.parent?
  .container.center-align
    %hr
    %br
    %br
    %h1.center-align
    .row.headline
      = form_for @chore do |f|
        .input-field.col.s6
          = f.label :title, class: "indigo-text"
          = f.text_field :title, class: 'materialize-textarea'
        .input-field.col.s6
          = f.select(:child_id, options_for_select(@children_options))
          %label.indigo-text Select Child
        / .input-field.col.s12
        /   = f.label :description, class: "indigo-text"
        /   = f.text_area :description, class: 'materialize-textarea'
        .input-field.col.s12
          = f.label :xp_value, class: "indigo-text"
          = f.text_field :xp_value, class: 'materialize-textarea'
        %h6.col.s6.indigo-text
          Due Date
        %h6.col.s6.indigo-text
          Add A Picture
        %input.datepicker.col.s6{:type => "date"}
        .field.col.s6
          /= f.label :avatar, class: 'btn red darken-4 white-text'
          = f.file_field :avatar
          %br
          %br
          %br

          = link_to 'Cancel', user_path(current_user), id: "round", class: 'btn red darken-4 white-text'
          = f.submit 'Submit Chore', id: "round", class: 'btn red darken-4 white-text'
          %br
          %br
          %br
